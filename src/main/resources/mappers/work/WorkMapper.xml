<!-- 사원 근무그룹 지정-->
  <resultMap type="com.work.workhub.admin.work.model.dto.MemberGroupDTO" id="memberGroupResultMap">
		<id property="gmNo" column="GM_NO"/>
		<result property="no" column="NO"/>
		<result property="groupNo" column="GROUP_NO"/>
		<result property="gmDate" column="GM_DATE"/>
		<result property="groupStatus" column="GROUP_STATUS"/>
		<result property="name" column="NAME"/>
		<result property="groupName" column="GROUP_NAME"/>
	<!-- <collection property="memberList" resultMap="memberResultMap"/>
	<collection property="workGroupList" resultMap="workGroupResultMap"/> -->
	</resultMap>

	
	<!-- 근태유형 작성 -->
	<insert id="workWrite">
		INSERT
			INTO WORK_CATEGORY
		(
		WORK_NO
		, WORK_NAME
		, WORK_INCLUDE
		, WORK_USE
		, WORK_STATUS
		)	
		VALUES
		(
		  SEQ_WORK_NO.NEXTVAL
		, #{ workName } 
		, #{ workInclude }
		, #{ workUse }
		, DEFAULT
		)
	</insert>
	
	<!-- 근태유형 조회 -->
	<select id="workSelect" resultMap="workResultMap">
	SELECT
	    *
	 FROM WORK_CATEGORY 
	 WHERE WORK_STATUS = 'Y'
	 ORDER BY WORK_NO 
	</select>
	
	<!-- 연차유형 조회 -->
	<select id="restcateSelect" resultMap="restcateResultMap">
	SELECT
	    *
	 FROM REST_CATEGORY
	 WHERE REST_STATUS = 'Y'
	 ORDER BY REST_NO    
	</select>
	
	<!-- 연차유형 작성 -->
	<insert id="restCateWrite">
		INSERT
			INTO REST_CATEGORY
		(
		  REST_NO
		, REST_NAME
		, REST_DED
		, REST_INCLUDE
		, REST_MONEY
		, REST_USE
		, REST_STATUS
		)	
		VALUES
		(
		  SEQ_REST_NO.NEXTVAL
		, #{ restName } 
		, #{ restDed }
		, #{ restInclude }
		, #{ restMoney }
		, #{ restUse }
		, DEFAULT
		)
	</insert>
	
	<!-- 근무그룹유형 조회 -->
	<select id="workGroupSelect" resultMap="workGroupResultMap">
	SELECT
	    *
	 FROM WORK_GROUP
	 WHERE GROUP_STATUS = 'Y'
	 ORDER BY GROUP_NO    
	</select>
	
	
		<!-- 근무그룹유형 작성 -->
	<insert id="workGroupWrite">
		INSERT
			INTO WORK_GROUP
		(
		  GROUP_NO
		, GROUP_NAME
		, GROUP_EX
		, GROUP_DAY
		, GROUP_FIRDATE
		, GROUP_ENDDATE
		, GROUP_FIRREST
		, GROUP_ENDREST
		, GROUP_STATUS
		, GROUP_REST
		, GROUP_USE
		)	
		VALUES
		(
		  SEQ_GROUP_NO.NEXTVAL
		, #{ groupName } 
		, #{ groupEx }
		, #{ groupDay }
		, #{ groupFirdate }
		, #{ groupEnddate }
		, #{ groupFirrest }
		, #{ groupEndrest }
		, DEFAULT
		, #{ groupRest }
		, #{ groupUse }
		)
	</insert>
	
	<!-- selectbox 근무그룹 -->
	<select id="boxSelect" resultMap="workGroupResultMap">
	SELECT
	    *
	 FROM WORK_GROUP
	 WHERE GROUP_USE = '사용'
	 ORDER BY GROUP_NO    
	</select>
	
	<!-- 사원 근무그룹 등록 -->
	<insert id="memberGroupWrite">
		INSERT
			INTO GROUP_MEM
		(
		  GM_NO
		, NO
		, GROUP_NO
		, GROUP_STATUS
		)	
		VALUES
		(
		  SEQ_GM_NO.NEXTVAL
		, #{ no } 
		, #{ groupNo }
		, DEFAULT
		)
	</insert>
	
	
	
	<!-- 근무그룹유형 조회 -->
